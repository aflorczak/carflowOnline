                <div>
                    <a href="{{ path('app_view_website_get-reservation-page-view') }}" class="btn btn-success" role="button">REZERWACJA</a>
                </div>
            </div>
        </div>

        <div style="background-color: #1a99f3; color: white; padding: 40px; text-align: center;">
            <div class="container-fluid">
                <div style="font-size: 180%; font-weight: bold; margin-bottom: 25px;">
                    CHCESZ BYĆ NA BIEŻĄCO ?
                </div>
                <p>
                    ZAPISZ SIĘ DO NASZEGO NEWSLETTERA
                </p>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="email@domain.com">
                            <span class="input-group-btn">
                                <button class="btn btn-success" type="button">DOŁĄCZ</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}