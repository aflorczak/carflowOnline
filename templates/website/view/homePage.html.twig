{% extends 'website/websiteBase.html.twig' %}


{% block title %}
    {{ title }} | CarFLOw
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('website_homePage') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('website_homePage') }}
{% endblock %}


{% block websiteBody %}
    <div>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">

                <div class="item active">
                    <img src="{{ asset('/static/img/offices.png') }}" alt="Obraz przedstawiający obsługę klienta w jednym z biur naszej ogólnopolskiej sieci">
                    <div class="carousel-caption">
                        <div class="carousel-custom-header">
                            OGÓLNOPOLSKA SIEĆ
                        </div>
                        <span>
                        POSIADAMY ROZWINIĘTĄ SIEĆ WYPOŻYCZALNI W CAŁYM KRAJU.
                    </span>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('/static/img/cars.png') }}" alt="Obraz przedstawiający jeden z naszych nowoczesnych pojazdów">
                    <div class="carousel-caption">
                        <div class="carousel-custom-header">
                            RÓŻNORODNE POJAZDY
                        </div>
                        <span>
                        POSIADAMY ELEKTRYCZNE ORAZ SPALIONOWE POJAZDY RÓŻNYCH KATEGORII.
                    </span>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('/static/img/development.png') }}" alt="Obraz przedstawiający nową halę gdzie powstanie nasze biuro">
                    <div class="carousel-caption">
                        <div class="carousel-custom-header">
                            CIĄGŁY ROZWÓJ
                        </div>
                        <span>
                        REALIZUJEMY ZAKUP KOLEJNYCH POJAZDÓW, OTWIERAMY NOWE ODDZIAŁY ORAZ PODNOSIMY KWALIFIKACJE PRACOWNIKÓW.
                    </span>
                    </div>
                </div>

            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div style="background-color: white;">
            <div class="container-fluid">
                <div class="row" style="padding: 40px;">
                    <div class="col-md-4" style="font-size: 180%; text-align: center;">
                        Kim jesteśmy ?
                    </div>
                    <div class="col-md-8">
                        <p>
                            {{ aboutUs }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div style="background-color: white; padding: 40px; text-align: center;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div style="font-size: 150%; font-weight: bold;">{{ numberOfCars }}</div>
                        POJAZDÓW DO DYSPOZYCJI
                    </div>
                    <div class="col-md-4">
                        <div style="font-size: 150%; font-weight: bold;">{{ numberOfBranches }}</div>
                        ODDZIAŁÓW W CAŁEJ POLSCE
                    </div>
                    <div class="col-md-4">
                        <div style="font-size: 150%; font-weight: bold;">{{ numberOfRentedCars }}</div>
                        OBECNIE WYNAJĘTYCH POJAZDÓW
