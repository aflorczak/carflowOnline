{% extends 'admin/adminBase.html.twig' %}

{% block adminBody %}
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li><a href="{{ path('app_view_website_get-home-page-view') }}">HOME</a></li>
            <li><a href="{{ path('app_view_admin_dashboard_get-index') }}">PANEL ADMINISTRATORA</a></li>
            <li class="active">ODDZIAŁY: WSZYSTKIE</li>
        </ol>
    </div>
    <div class="container-fluid">

        <div class="alert alert-info" role="alert">LICZBA ODDZIAŁÓW W BAZIE DANYCH: {{ counter }}</div>

        {% if branches %}
            <div class="table-responsive">
                <table class="table table-striped" style="width: 100%; text-align: center;">
                    <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Nazwa</th>
                        <th class="text-center">Slug</th>
                        <th class="text-center">Adres Pierwsza Linia</th>
                        <th class="text-center">Adres Druga Linia</th>
                        <th class="text-center">Kod Pocztowy</th>
                        <th class="text-center">Miasto</th>
                        <th class="text-center" colspan="3">Akcje</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for branch in branches %}
                        <tr>
                            <td>{{ branch.id }}</td>
                            <td>{{ branch.name }}</td>
                            <td>{{ branch.slug }}</td>
                            <td>{{ branch.addressFirstLine }}</td>
                            <td>{{ branch.addressSecondLine }}</td>
                            <td>{{ branch.postCode }}</td>
                            <td>{{ branch.city }}</td>
                            <td>
                                <a href="{{ path('app_view_admin_branches_get-branch-details-view', { id: branch.id}) }}">
                                    <button class="btn btn-success btn-xs">Pokaż</button>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app_view_admin_branches_edit-branch-by-id', {id: branch.id}) }}">
                                    <button class="btn btn-warning btn-xs">Edytuj</button>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app_view_admin_branches_remove-branch-by-id', {id: branch.id}) }}">
                                    <button class="btn btn-danger btn-xs">Usuń</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-danger" role="alert">
                BRAK ODDZIAŁÓW DO WYŚWIETLENIA
            </div>
        {% endif %}
    </div>
{% endblock %}